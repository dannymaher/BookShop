@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 ">

                <div class="form-floating py-2 col-12">
                    <input asp-for=Title disabled class="border-0 shadow form-control" />
                    <label asp-for=Title class=" ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" disabled class="border-0 shadow form-control"></textarea> 
                    <label asp-for=Description class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="border-0 shadow form-control" />
                    <label asp-for=ISBN class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled class="border-0 shadow form-control" />
                    <label asp-for=Author class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="border-0 shadow form-control" />
                    <label asp-for=ListPrice class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="border-0 shadow form-control" />
                    <label asp-for=Price class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" disabled class="border-0 shadow form-control" />
                    <label asp-for=Price50 class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" disabled class="border-0 shadow form-control" />
                    <label asp-for=Price100 class="ms-2"></label>
                </div>

            
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>


            </div>

        </form>
    </div>
</div>
