@page
@model BookShopRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />

        </div>
        @* *<div asp-validation-summary="All">

        </div>*@
        <div>
            <input hidden disabled asp-for="Category.Id"></input>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Category.Name class="p-0"></label>
            <input asp-for=Category.Name class="form-control" disabled />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Category.DisplayOrder class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>


    </div>

</form>

